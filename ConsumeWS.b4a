Private Sub cmdAdd_Click
	Wait For (cam.Create(txtNombre.Text,txtEstado.Text,txtFecha_Inicio.Text,txtImagen.Text,txtDeleteStatus.Text)) Complete( resultado As Campeonato )
	If resultado.Id = 0 Then
		xui.MsgboxAsync("REGISTRO CREADO !!", "OK")
		txtId.Text = resultado.Id
	Else
		xui.MsgboxAsync("REGISTRO NO SE PUDO CREAR!!", "ERROR")
	End If
End Sub

