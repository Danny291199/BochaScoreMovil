Private Sub cmdReadAll_Click
	lstCampeonatos.Clear
	
	Wait For (cam.Read_All) Complete( listaCamptos As List )
	If listaCamptos.Size > 0 Then
		xui.MsgboxAsync("REGISTROS ENCONTRADOS !!", "OK")
		
		For Each camp As Campeonato In listaCamptos
			lstCampeonatos.AddTwoLines2( camp.Nombre, "Fecha Inicio = " & camp.Fecha_Inicio, camp)
		Next
	Else
		xui.MsgboxAsync("REGISTROS NO ENCONTRADOS!!", "ERROR")
	End If
End Sub

Private Sub lstDepartamentos_ItemClick (Position As Int, Value As Object)
	Dim camp As Campeonato = Value
	txtId.Text = camp.Id
	txtNombre.Text = camp.Nombre
	txtEstado.Text = camp.Estado
	txtFecha_Inicio.Text = camp.Fecha_Inicio
	txtImagen.Text = camp.Imagen
	txtDeleteStatus.Text = camp.Delete_Status
	
End Sub